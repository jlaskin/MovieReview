<%=form_for(@recommendation) do |f|%>
	<div class="field">
		<p><b>Title</b></p>
		<%=f.text_field :title%>
	</div>
	<div class="field">
		<p>Body</p>
		<%=f.text_field :body%>
	</div>
	<div class="field">
		<p>User</p>
		<%=f.hidden_field :user_id, :value=>current_user.id%>
	</div>
	<div class="actions">
		<%=f.submit%>
	</div>
<%end%>