<%= form_for(@user) do |f| %>
	<div class="field">
		<p><b>Name</b></p> 
		<%= f.text_field :name%>
	</div>
	<div class="field">
		<p><b>Email</b></p> 
		<%= f.text_field :email%>
	</div>
	<div class="field">
		<p><b>Password</b></p> 
		<%= f.password_field :password%>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
<%=link_to "Return Home", home_index_path%>